@model IEnumerable<ApoliSys.Models.Cotacao>

@{
    ViewData["Title"] = "Cotações";
}

<div class="row">
    <div class="col-12">
        <div class="table-responsive">
            <table class="table table-hover table-nowrap mb-0">
                <thead class="thead-light">
                    <tr>
                        <th>
                            <div class="d-flex align-items-center">
                                <i class="fa fa-tag "></i>
                                Plano Contratado
                            </div>
                        </th>
                        <th>
                            <div class="d-flex align-items-center">
                                <i class="fa fa-receipt"></i>
                                Valor à ser pago
                            </div>
                        </th>
                        <th>
                            <div class="d-flex align-items-center">
                                <i class="fa fa-receipt"></i>
                                Valor Total do Prêmio
                            </div>
                        </th>
                        <th>
                            <div class="d-flex align-items-center">
                                <i class="fa fa-money-bill"></i>
                                Forma de Pagamento
                            </div>
                        </th>
                        <th>
                            <div class="d-flex align-items-center">
                                <i class="fa fa-clock"></i>
                                Status
                            </div>
                        </th>
                        <th></th><!-- Botoes -->
                        <th></th><!-- Link p/apolices -->
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="10">
                            <div class="table-cell-icon">
                                <i class="fa fa-plus"></i>
                                Gerar uma cotação
                            </div>
                            <a href="~/Veiculo/@ViewBag.IdVeiculo/Cotacao/Cadastrar" class="stretched-link"></a>
                        </td>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="cotacao-plano">
                                <div class="avatar avatar-circle avatar-xs">
                                        <i class="fa fa-list-check align-middle"></i>
                                </div>
                                <span>
                                    @Html.DisplayFor(modelItem => item.PlanoSeguro)
                                </span>
                            </td>
                            <td class="cotacao-valor-pagamento">
                                R$ @item.ValorPremioSeguro
                            </td>
                            <td class="cotacao-valor-total">
                                R$ @item.ValorTotalPremioSeguro
                            </td>
                            <td class="cotacao-forma-pagamento">
                                @Html.DisplayFor(modelItem => item.FormaPagamento)
                            </td>
                            <td class="cotacao-status">
                                <div class="table-cell-icon">
                                    <i class="fa fa-clock clock-gray"></i>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </div>
                            </td>
                            <td class="table-cell-buttons">
                                <div class="d-flex justify-content-end">
                                    <button class="btn btn-table me-2">
                                        <i class="fa fa-pen"></i>
                                    </button>
                                    <button class="btn btn-table me-2 aprovar">
                                        <i class="fa fa-circle-check"></i>
                                    </button>
                                    <button class="btn btn-table me-2 negar">
                                        <i class="fa fa-times-circle"></i>
                                    </button>
                                    <button class="btn btn-table remove ">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                            <td>
                                <a class="stretched-link" href="/Cotacao/@item.Id/Apolice"></a>
                            </td>
                        </tr>
                    }
                    <tr class=" d-none"><!-- Em andamento -->
                        <td class="cotacao-plano">
                            <div class="avatar avatar-circle avatar-xs">
                                    <i class="fa fa-list-check align-middle"></i>
                            </div>
                            <span>Seguro de Cobertura Básica</span>
                        </td>
                        <td class="cotacao-valor-pagamento">
                            R$ 959,99
                        </td>
                        <td class="cotacao-valor-total">
                            R$ 9599,99
                        </td>
                        <td class="cotacao-forma-pagamento">
                            A Prazo (10x)
                        </td>
                        <td class="cotacao-status">
                            <div class="table-cell-icon">
                                <i class="fa fa-clock clock-gray"></i>
                                Em andamento
                            </div>
                        </td>
                        <td class="table-cell-buttons">
                            <div class="d-flex justify-content-end">
                                <button class="btn btn-table me-2">
                                    <i class="fa fa-pen"></i>
                                </button>
                                <button class="btn btn-table me-2 aprovar">
                                    <i class="fa fa-circle-check"></i>
                                </button>
                                <button class="btn btn-table me-2 negar">
                                    <i class="fa fa-times-circle"></i>
                                </button>
                                <button class="btn btn-table remove ">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </div>
                        </td>
                        <td></td>
                    </tr>
                    <tr class=" d-none"><!-- Aprovada -->
                        <td class="cotacao-plano">
                            <div class="avatar avatar-circle avatar-xs">
                                    <i class="fa fa-list-check align-middle"></i>
                            </div>
                            <span>Seguro de Cobertura Básica</span>
                        </td>
                        <td class="cotacao-valor-pagamento">
                            R$ 959,99
                        </td>
                        <td class="cotacao-valor-total">
                            R$ 9599,99
                        </td>
                        <td class="cotacao-forma-pagamento">
                            A Prazo (10x)
                        </td>
                        <td class="cotacao-status">
                            <div class="table-cell-icon">
                                <i class="fa fa-circle-check circle-check-green"></i>
                                Aprovada
                            </div>
                        </td>
                        <td class="table-cell-buttons">
                            <div class="d-flex justify-content-end">
                                <button class="btn btn-table me-2">
                                    <i class="fa fa-pen"></i>
                                </button>
                                <button class="btn btn-table me-2 border-0 aprovar" disabled>
                                    <i class="fa fa-circle-check"></i>
                                </button>
                                <button class="btn btn-table me-2 border-0 negar" disabled>
                                    <i class="fa fa-times-circle"></i>
                                </button>
                                <button class="btn btn-table remove ">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </div>
                        </td>
                        <td>
                            <a class="stretched-link" href="/apolices/"></a>
                        </td>
                    </tr>
                    <tr class="table-line-disabled d-none"><!-- Cancelada -->
                        <td class="cotacao-plano">
                            <div class="avatar avatar-circle avatar-xs">
                                    <i class="fa fa-list-check align-middle"></i>
                            </div>
                            <span>Seguro de Cobertura Básica</span>
                        </td>
                        <td class="cotacao-valor-pagamento">
                            R$ 959,99
                        </td>
                        <td class="cotacao-valor-total">
                            R$ 9599,99
                        </td>
                        <td class="cotacao-forma-pagamento">
                            A Prazo (10x)
                        </td>
                        <td class="cotacao-status">
                            <div class="table-cell-icon">
                                <i class="fa fa-times-circle times-circle-red me-1 fs-5"></i>
                                Cancelada
                            </div>
                        </td>
                        <td class="table-cell-buttons">
                            <div class="d-flex justify-content-end">
                                <button class="btn btn-table me-2 border-0" disabled>
                                    <i class="fa fa-pen"></i>
                                </button>
                                <button class="btn btn-table me-2 border-0 aprovar" disabled>
                                    <i class="fa fa-circle-check"></i>
                                </button>
                                <button class="btn btn-table me-2 border-0 negar" disabled>
                                    <i class="fa fa-times-circle"></i>
                                </button>
                                <button class="btn btn-table remove">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </div>
                        </td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="/js/Cotacao/Index.js" defer></script>