@model ApoliSys.Models.Apolice

@{
    ViewData["Title"] = "Emitir uma Apólice";
}

<div class="row mt-xxl-5">
    <div class="col-12 col-sm-auto mx-sm-auto">
        <h5 class="text-primary text-center">Emitir uma Apólice</h5>
    </div>
</div>
<form id="form-cadastrar" action="/Apolice/Cadastrar" method="POST" class="row gy-3 tab-content step-form needs-validation justify-content-md-center" novalidate>
    <input type="hidden" asp-for="IdCotacao" value="@ViewBag.IdCotacao">
    <div class="col-md-8 col-lg-6 col-xl-5 col-xxl-4 tab-pane show active fade" id="step-one-pane">
        <div class="row gy-2 justify-content-sm-center">
            <div class="col-sm-5 col-md-6 form-group">
                <label asp-for="ProcessoSusep" class="form-label">N<sup class="text-dark">o</sup> Processo SUSEP</label>
                <input form="form-cadastrar" asp-for="ProcessoSusep" class="form-control" placeholder="Ex. 12345678910111213141" type="number" required value=""/>
                <span asp-validation-for="ProcessoSusep" class="invalid-feedback">Campo Obrigatório</span>
            </div>
            <div class="col-sm-5 col-md-6 form-group">
                <label asp-for="NumeroApolice" class="form-label">N<sup class="text-dark">o</sup> Apólice</label>
                <input form="form-cadastrar" asp-for="NumeroApolice" class="form-control" placeholder="Ex. 012345678" type="number" required value='@String.Format("{0:000000000}", @ViewBag.NumeroApolice)'/>
                <span asp-validation-for="NumeroApolice" class="invalid-feedback">Campo Obrigatório</span>
            </div>
            <div class="col-sm-5 col-md-6 form-group me-auto">
                <label asp-for="DataTermino" class="form-label">Término da Vigência</label>
                <input form="form-cadastrar" asp-for="DataTermino" class="form-control" type="date" required/>
                <span asp-validation-for="DataTermino" class="invalid-feedback">Campo Obrigatório</span>
            </div>
        </div>
    </div>
    <div class="w-100 m-0"></div>
    <div class="col-sm-11 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
        <div class="row">
            <div class="col-12 col-sm-3 ms-sm-auto">
                <button type="submit" class="btn btn-primary w-100" form="form-cadastrar">Cadastrar</button>
            </div>
        </div>
    </div>
</form>