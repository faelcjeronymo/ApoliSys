@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - ApoliSys</title>
    <link rel="stylesheet" href="~/node_modules/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/site.css">
    <script src="https://kit.fontawesome.com/5a992afea4.js" crossorigin="anonymous"></script>
</head>
<body class="bg-light h-100">
    <div class="container-fluid h-100">
        <div class="row h-100 ">
            <div class="col-2 h-100 bg-white shadow pb-5 mb-5" style="width: 20%!important;">
                <div class="row flex-column justify-content-center align-items-center h-100 mb-5 pb-5">
                    <div class="col-auto mb-4">
                        <span class="text-primary h1 fw-semibold">Apoli</span><span class="text-primary-dark h1 fw-semibold">Sys</span>
                    </div>
                    <div class="col-auto mb-4">
                        <span class="fw-semibold text-dark text-opacity-75">Fa√ßa login para acessar o sistema</span>
                    </div>
                    <div class="col-12 mb-2">
                        <label for="" class="form-label fw-normal">CPF</label>
                        <div class="input-group mb-3">
                            <input type="text" class="form-control bg-dark bg-opacity-10 border-0" placeholder="Ex. 123.456.789-10" aria-label="Username" aria-describedby="basic-addon1" style="border-top-right-radius: 0.375rem;border-bottom-right-radius: 0.375rem;">
                            <span class="input-group-text border-0 bg-primary position-absolute end-0 h-100 rounded-2" id="basic-addon1"><i class="fa fa-user text-white"></i></span>
                        </div>
                    </div>
                    <div class="col-12 mb-3">
                        <label for="" class="form-label fw-normal">Senha</label>
                        <div class="input-group mb-3">
                            <input type="text" class="form-control bg-dark bg-opacity-10 border-0" placeholder="Ex. 123.456.789-10" aria-label="Username" aria-describedby="basic-addon1" style="border-top-right-radius: 0.375rem;border-bottom-right-radius: 0.375rem;">
                            <span class="input-group-text border-0 bg-primary position-absolute end-0 h-100 rounded-2" id="basic-addon1"><i class="fa fa-lock text-white"></i></span>
                        </div>
                    </div>
                    <div class="col-12 mb-5 pb-5">
                        <button class="btn w-100 btn-primary">Login</button>
                    </div>
                </div>
            </div>
            <div class="col">
                <img src="~/img/imagem-carro-assistencia.png" alt="">
            </div>
        </div>
    </div>
</body>
</html>