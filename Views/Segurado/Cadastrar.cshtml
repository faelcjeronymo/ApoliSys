@model ApoliSys.Models.Pessoa

@{
    ViewData["PageTitle"] = "Cadastrar um Segurado";
}

<div class="row">
    <div class="col-12">
        <ul class="nav nav-tabs form-step" id="myTab" role="tablist">
            <li class="nav-item form-step-item" role="presentation">
                <button class="nav-link form-step-link active" id="step-one" data-bs-toggle="tab" data-bs-target="#step-one-pane" type="button" role="tab" aria-controls="step-one-pane" aria-selected="true">1</button>
            </li>
            <hr class="form-step-separator">
            <li class="nav-item form-step-item" role="presentation">
                <button class="nav-link form-step-link" id="step-two" data-bs-toggle="tab" data-bs-target="#step-two-pane" type="button" role="tab" aria-controls="step-two-pane" aria-selected="false">2</button>
            </li>
        </ul>
        @* <div class="form-step-indicator">
            <span class="form-step-number">1</span>
            <span class="form-step-separator"></span>
            <span class="form-step-number">2</span>
        </div> *@
    </div>
</div>
<hr />
<form asp-action="Cadastrar" class="row gy-3 tab-content step-form needs-validation">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="tab-pane show active fade" id="step-one-pane">
        <div class="row gy-2">
            <div class="col-12">
                <h5 class="text-primary-dark">Informações Pessoais</h5>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="form-label">Nome<sup>*</sup></label>
                <input asp-for="Nome" class="form-control" placeholder="Ex. Ana Maria da Silva" required/>
                <span asp-validation-for="Nome" class="invalid-feedback">Campo Obrigatório</span>
            </div>
            <div class="form-group">
                <label asp-for="Genero" class="form-label">Gênero<sup>*</sup></label>
                <select asp-for="Genero" required>
                    <option value="0" selected disabled>Selecione</option>
                    <option value="@genero.feminino">Feminino</option>
                    <option value="@genero.masculino">Masculino</option>
                    <option value="@genero.outro">Outro</option>
                </select>
                <span asp-validation-for="Genero" class="invalid-feedback">Campo obrigatório</span>
            </div>
            <div class="form-group">
                <label asp-for="DataNascimento" class="form-label">Data de Nascimento<sup>*</sup></label>
                <input asp-for="DataNascimento" type="date" class="form-control" required>
                <span asp-validation-for="DataNascimento" class="invalid-feedback">Campo obrigatório</span>
            </div>
            <div class="form-group">
                <label asp-for="CpfCnpj" class="form-label">CPF/CNPJ<sup>*</sup></label>
                <input asp-for="CpfCnpj" class="form-control" placeholder="Digite o CPF/CNPJ do Segurado" required/>
                <span asp-validation-for="CpfCnpj" class="invalid-feedback">Campo Obrigatório</span>
            </div>
            <div class="form-group">
                <label asp-for="Cnh" class="form-label">CNH<sup>*</sup></label>
                <input asp-for="Cnh" class="form-control" placeholder="Ex. 00123456789" required/>
                <span asp-validation-for="Cnh" class="invalid-feedback">Campo Obrigatório</span>
            </div>
            <div class="form-group">
                <label asp-for="Celular" class="form-label">Número de Celular<sup>*</sup></label>
                <input asp-for="Celular" class="form-control" placeholder="Ex. (12) 99345-6789" type="tel" required/>
                <span asp-validation-for="Celular" class="invalid-feedback">Campo Obrigatório</span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="form-label">Endereço de E-mail</label>
                <input asp-for="Email" class="form-control" placeholder="Ex. segurado@email.com"/>
                <span asp-validation-for="Email" class="invalid-feedback">Campo Obrigatório</span>
            </div>
        </div>
    </div>
    <div class="tab-pane fade" id="step-two-pane">
        <div class="row gy-2">
            <div class="col-12">
                <h5 class="text-primary-dark">Informações de Endereço</h5>
            </div>
            <div class="form-group">
                <label asp-for="Cep" class="form-label">CEP</label>
                <input asp-for="Cep" class="form-control" placeholder="Ex. 12345-678"/>
                <span asp-validation-for="Cep" class="invalid-feedback">Campo Obrigatório</span>
            </div>
            <div class="col-8 form-group">
                <label asp-for="Cidade" class="form-label">Cidade</label>
                <input asp-for="Cidade" class="form-control" placeholder="Ex. Ribeirão Preto"/>
                <span asp-validation-for="Cidade" class="invalid-feedback">Campo Obrigatório</span>
            </div>
            <div class="col-4 form-group">
                <label asp-for="Estado" class="form-label">UF</label>
                <select asp-for="Estado">
                    <option value="0">UF</option>
                    <option value="AC">AC</option>
                    <option value="AL">AL</option>
                    <option value="AP">AP</option>
                    <option value="AM">AM</option>
                    <option value="BA">BA</option>
                    <option value="CE">CE</option>
                    <option value="DF">DF</option>
                    <option value="ES">ES</option>
                    <option value="GO">GO</option>
                    <option value="MA">MA</option>
                    <option value="MS">MS</option>
                    <option value="MT">MT</option>
                    <option value="MG">MG</option>
                    <option value="PA">PA</option>
                    <option value="PB">PB</option>
                    <option value="PR">PR</option>
                    <option value="PE">PE</option>
                    <option value="PI">PI</option>
                    <option value="RJ">RJ</option>
                    <option value="RN">RN</option>
                    <option value="RS">RS</option>
                    <option value="RO">RO</option>
                    <option value="RR">RR</option>
                    <option value="SC">SC</option>
                    <option value="SP">SP</option>
                    <option value="SE">SE</option>
                    <option value="TO">TO</option>
                </select>
                <span asp-validation-for="Estado" class="invalid-feedback"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bairro" class="form-label"></label>
                <input asp-for="Bairro" class="form-control" placeholder="Ex. Campos Elísios"/>
                <span asp-validation-for="Bairro" class="invalid-feedback">Campo Obrigatório</span>
            </div>
            <div class="form-group">
                <label asp-for="Rua" class="form-label"></label>
                <input asp-for="Rua" class="form-control" placeholder="Ex. Presidente Vargas"/>
                <span asp-validation-for="Rua" class="invalid-feedback">Campo Obrigatório</span>
            </div>
            <div class="form-group">
                <label asp-for="Numero" class="form-label"></label>
                <input asp-for="Numero" class="form-control" placeholder="Ex. 123"/>
                <span asp-validation-for="Numero" class="invalid-feedback">Campo Obrigatório</span>
            </div>
            <div class="form-group">
                <label asp-for="Complemento" class="form-label"></label>
                <input asp-for="Complemento" class="form-control" placeholder="Ex. Ap. 3 - Bloco B"/>
                <span asp-validation-for="Complemento" class="invalid-feedback">Campo Obrigatório</span>
            </div>
        </div>
    </div>

    <div class="">
        <button type="button" class="btn btn-primary w-100">Avançar</button>
    </div>

</form>
