@model IEnumerable<ApoliSys.Models.Veiculo>

@{
    ViewData["Title"] = "Veículos";
}

<div class="row">
    <div class="col-12">
        <div class="table-responsive">
            <table class="table table-hover table-nowrap mb-0">
                <thead class="thead-light">
                    <tr>
                        <th>
                            <div class="d-flex align-items-center">
                                <i class="fa fa-copyright"></i>
                                Marca
                            </div>
                        </th>
                        <th>
                            <div class="d-flex align-items-center">
                                <i class="fa fa-car-side"></i>
                                Modelo
                            </div>
                        </th>
                        <th>
                            <div class="d-flex align-items-center">
                                <i class="fa fa-hashtag"></i>
                                Placa
                            </div>
                        </th>
                        <th>
                            <div class="d-flex align-items-center">
                                <i class="fa fa-wallet"></i>
                                RENAVAM
                            </div>
                        </th>
                        <th>
                            <div class="d-flex align-items-center">
                                <i class="fa fa-road"></i>
                                Quilometragem
                            </div>
                        </th>
                        <th></th><!-- Botoes -->
                        <th></th><!-- link p/ cotacoes -->
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="10">
                            <div class="table-cell-icon">
                                <i class="fa fa-plus"></i>
                                Cadastrar um veículo
                                <a href='~/Segurado/@ViewBag.IdSegurado/Veiculo/Cadastrar' class="stretched-link"></a>
                            </div>
                        </td>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Marca)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Modelo)
                            </td>
                            <td>
                                @string.Format(@"{0:###-####}", item.Placa)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Renavam)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Km) Km
                            </td>
                            <td class="table-cell-buttons">
                                <div class="d-flex justify-content-end">
                                    <a href="~/Segurado/@ViewBag.IdSegurado/Veiculo/Modificar/@item.Id" class="btn btn-table">
                                        <i class="fa fa-pen"></i>
                                    </a>
                                    <a href="~/Segurado/@ViewBag.IdSegurado/Veiculo/@item.Id" class="btn btn-table">
                                        <i class="fa fa-info-circle"></i>
                                    </a>
                                    <button class="btn btn-table remove" data-id-veiculo="@item.Id">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                            <td colspan="0">
                                <a class="stretched-link" href="/Veiculo/@item.Id/Cotacao"></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="/js/Veiculo/Index.js" defer></script>